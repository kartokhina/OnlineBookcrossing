<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="5sp"/>

        <TextView
            android:id="@+id/titleET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/UserName"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="20sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/authorET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleET"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="italic" />

        <ImageView
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon"
            android:id="@+id/pic"
            android:layout_below="@id/authorET"/>

        <TextView
            android:id="@+id/yearET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pic"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="20sp"/>


        <TextView
            android:id="@+id/placeET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/yearET"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="5sp" />


        <TextView
            android:id="@+id/contactET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/placeET"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="5sp"
            android:clickable="true"/>


        <TextView
            android:id="@+id/extraET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactET"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="5sp"
            />

    </RelativeLayout>

</ScrollView>